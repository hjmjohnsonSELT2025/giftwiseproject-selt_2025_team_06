<nav class="navbar">
  <div class="navbar-left">
    <% if current_user %>
      <%= link_to "GiftWise", events_path, class: "navbar-brand" %>
    <% else %>
      <%= link_to "GiftWise", root_path, class: "navbar-brand" %>
    <% end %>
  </div>

  <ul class="navbar-links">
    <% if current_user %>

      <li class="nav-item">
        <%= link_to invites_path,method: :get, class: "navbar-button badge-wrapper" do %>
          Invites
          <% if @pending_event_invites_count.to_i > 0 %>
            <span class="nav-badge">!</span>
          <% end %>
        <% end %>
      </li>


      <!--Friends Tab -->
      <li class="nav-item">
        <%= link_to friendships_path, class: "navbar-button nav-friends badge-wrapper" do %>
          Friends
          <% if @pending_friend_requests_count.to_i > 0 %>
            <span class="nav-badge">!</span>
          <% end %>
        <% end %>
      </li>

      <li>
        <%= button_to "Profile", user_path(current_user.id),
                      method: :get,
                      class: "navbar-button" %>
      </li>

      <li>
        <%= button_to "Logout", logout_path,
                      method: :delete,
                      class: "navbar-button" %>
      </li>
    <% else %>
      <li>
        <%= button_to "Login", login_path,
                      method: :get,
                      class: "navbar-button" %>
      </li>
    <% end %>
  </ul>
</nav>

<style>
    .badge-wrapper {
        position: relative;
        display: inline-flex;
        align-items: center;
        gap: 4px;
    }
    .nav-badge {
        position: absolute;
        top: -6px;
        right: -12px;
        background: #dc2626;
        color: white;
        font-size: 0.7rem;
        width: 16px;
        height: 16px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        pointer-events: none;
    }


</style>