<!-- app/views/sessions/new.html.erb -->
<!-- This is the login page, creating a new session each time -->

<!DOCTYPE html>
<html>
<head>
  <title>Log In | GiftWise</title>
  <%= stylesheet_link_tag "default", "data-turbo-track": "reload" %>
</head>

<body class="login-page">
<div class="login-container">
  <h1>Log In</h1>

  <% if flash[:alert] %>
    <p class="alert"><%= flash[:alert] %></p>
  <% elsif flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
  <% end %>

  <%= form_with url: login_path, method: :post, local: true, html: { class: "login-form" } do |f| %>
    <div class="field">
      <%= f.label :username %><br>
      <%= f.text_field :username, id: 'username', placeholder: "Enter your username" %>
    </div>

    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password, id: 'password', placeholder: "Enter your password" %>
    </div>

    <div>
      <%= f.submit 'Log In', class: "login-button" %>
    </div> <br />

    <div>
      <%= link_to "Forgot Password?", forgot_pass_path, class: "btn btn-default" %>
    </div>
  <% end %>
</div>
</body>
</html>
