<!-- LOG IN PAGE -->

<!DOCTYPE html>
<html>
<head>
  <title>Log In | GiftWise</title>
  <%= stylesheet_link_tag "default", "data-turbo-track": "reload" %>
</head>

<body class="login-page">
<div class="login-container">

  <!-- Title -->
  <h1 class="login-title">üéÅ GiftWise üéÅ</h1>
  <h2 class="login-subtitle">Log In</h2>

  <% if flash[:alert] %>
    <p class="alert"><%= flash[:alert] %></p>
  <% elsif flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
  <% end %>

  <%= form_with url: login_path, method: :post, local: true, html: { class: "login-form" } do |f| %>

    <!-- USERNAME / EMAIL -->
    <div class="field">
      <%= f.label :username, "Username / Email", class: "form-label" %>
      <%= f.text_field :username, id: "username", class: "form-input", placeholder: "Enter your username or email" %>
    </div>

    <!-- PASSWORD -->
    <div class="field">
      <%= f.label :password, class: "form-label" %>
      <%= f.password_field :password, id: "password", class: "form-input", placeholder: "Enter your password" %>
    </div>

    <!-- SHOW PASSWORD CHECKBOX -->
    <div class="field">
      <label class="show-password">
        <input type="checkbox" id="toggle-password">
        Show Password
      </label>
    </div>

    <!-- FORGOT LINKS SECTION -->
    <div class="forgot-section">
      <%= link_to "Forgot username, email, or password?", recovery_path, class: "recovery-link" %>
    </div>


    <!-- LOGIN BUTTON -->
    <div class="login-button-container">
      <%= f.submit "LOGIN", class: "login-button" %>
    </div>

    <br />
    <div>
      Don't have an account?
      <%= link_to "Create Account", new_user_path, class: "submit-btn" %>
    </div>
  <% end %>

  <!-- FOOTER -->
  <div class="footer-container">
    <div class="footer-left">
      <%= link_to "Back", root_path, class: "back-link" %>
    </div>

    <div class="footer-right">
      <p class="signup-text">
        Don‚Äôt have an account?
        <%= link_to "Sign up Now!", new_user_path, class: "signup-link" %>
      </p>
    </div>
  </div>

</div>
</body>
</html>

