<h1>Log In</h1>

<%= form_with url: login_path, method: :post, local: true do |f| %>
  <div>
    <%= f.label :username %><br>
    <%= f.text_field :username, id: 'username' %>
  </div>

  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password, id: 'password' %>
  </div>

  <div>
    <%= f.submit 'Log In' %>
  </div>
<% end %>
