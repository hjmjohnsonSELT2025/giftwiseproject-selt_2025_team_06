<h1 class="page-title">Your Friends</h1>

<!-- Flash Messages -->
<% flash.each do |type, message| %>
  <div class="flash <%= type %>">
    <%= message %>
  </div>
<% end %>

<!-- Add Friend -->
<section class="card">
  <h2>Add a Friend</h2>

  <%= form_with url: friendships_path, method: :post, local: true, class: "inline-form" do %>
    <div class="form-group">
      <%= label_tag :username, "Friend's Username" %>
      <%= text_field_tag :username, nil, placeholder: "Enter username" %>
    </div>

    <%= submit_tag "Add Friend", class: "btn" %>
  <% end %>
</section>

<!-- Friends List -->
<section class="card">
  <h2>Friends</h2>

  <% if @friends.any? %>
    <ul class="list">
      <% @friends.each do |friend| %>
        <li class="list-item">
          <span class="username"><%= friend.username %></span>

          <%= button_to "Remove",
                        friendship_path(
                          Friendship.find_by(
                            user_id: [current_user.id, friend.id],
                            friend_id: [current_user.id, friend.id]
                          )
                        ),
                        method: :delete,
                        class: "btn btn-danger",
                        form: { class: "inline-form" } %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="muted">You donâ€™t have any friends yet.</p>
  <% end %>
</section>

<!-- Incoming Requests -->
<section class="card">
  <h2>
    Friend Requests
    <span class="badge"><%= @incoming_requests.count %></span>
  </h2>
  <% if @incoming_requests.any? %>
    <ul class="list">
      <% @incoming_requests.each do |request| %>
        <li class="list-item">
          <span class="username"><%= request.user.username %></span>

          <div class="actions">
            <%= button_to "Accept",
                          friendship_path(request),
                          method: :patch,
                          params: { status: "accepted" },
                          class: "btn" %>

            <%= button_to "Decline",
                          friendship_path(request),
                          method: :delete,
                          class: "btn btn-danger" %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="muted">No pending requests.</p>
  <% end %>
</section>

<style>
    .page-title {
        margin-bottom: 20px;
    }

    .card {
        background: #fff;
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        padding: 16px;
        margin-bottom: 24px;
    }

    .flash {
        padding: 10px 14px;
        border-radius: 6px;
        margin-bottom: 16px;
        font-weight: 500;
    }

    .flash.notice {
        background: #ecfdf5;
        color: #065f46;
        border: 1px solid #a7f3d0;
    }

    .flash.alert {
        background: #fef2f2;
        color: #991b1b;
        border: 1px solid #fecaca;
    }

    .form-group {
        margin-bottom: 12px;
    }

    .inline-form {
        display: inline;
    }

    .list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .list-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 10px 0;
        border-bottom: 1px solid #eee;
    }

    .list-item:last-child {
        border-bottom: none;
    }

    .username {
        font-weight: 500;
    }

    .actions {
        display: flex;
        gap: 8px;
    }

    .btn,
    .btn-danger {
        min-width: 96px;      /* forces same width */
        height: 36px;         /* forces same height */
        padding: 0 14px;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .muted {
        color: #6b7280;
    }

</style>