<div class="page-container">
<h1 class="page-title">
  <%= current_user.username %>’s Friends
</h1>
<!-- Flash Messages -->
<% flash.each do |type, message| %>
  <div class="flash <%= type %>">
    <%= message %>
  </div>
<% end %>

<!-- Add Friend -->
<section class="card">
  <h2>Add Friends </h2>
  <%= form_with url: friendships_path, method: :post, local: true do %>
    <div class="add-friend-row">
      <%= text_field_tag :username, nil, placeholder: "Enter username" %>
      <%= submit_tag "Add Friend", class: "btn" %>
    </div>
  <% end %>
</section>

<!-- Friends List -->
<section class="card">
  <h2>Friends List:</h2>

  <% if @friends.any? %>
    <ul class="list">
      <% @friends.each do |friend| %>
        <li class="list-item">
          <span class="username"><%= friend.username %></span>

          <%= button_to "Remove Friend",
                        friendship_path(
                          Friendship.find_by(
                            user_id: [current_user.id, friend.id],
                            friend_id: [current_user.id, friend.id]
                          )
                        ),
                        method: :delete,
                        class: "btn btn-danger",
                        form: { class: "inline-form" } %>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="muted">You don’t have any friends yet.</p>
  <% end %>
</section>

<!-- Incoming Requests -->
<section class="card">
  <h2 class="section-header">
    Friend Requests
    <% if @incoming_requests.any? %>
      <span class="badge">!</span>
    <% end %>
  </h2>

  <% if @incoming_requests.any? %>
    <ul class="list friend-requests">
      <% @incoming_requests.each do |request| %>
        <li class="list-item">
          <span class="username"><%= request.user.username %></span>

          <div class="actions">
            <%= button_to "Accept",
                          friendship_path(request),
                          method: :patch,
                          params: { status: "accepted" },
                          class: "btn-success" %>

            <%= button_to "Decline",
                          friendship_path(request),
                          method: :delete,
                          class: "btn btn-danger" %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="muted">No pending requests.</p>
  <% end %>
</section>
</div>

