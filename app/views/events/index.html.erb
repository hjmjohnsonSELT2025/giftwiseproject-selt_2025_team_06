<!-- app/views/sessions/new.html.erb -->
<!-- This is the login page, creating a new session each time -->

<!DOCTYPE html>
<html>
<head>
  <title>Your Events | GiftWise</title>
  <%= stylesheet_link_tag "default", "data-turbo-track": "reload" %>
  <style>
    .events-grid{
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        gap: 16px;
        margin-top: 20px;
    }

    .event-card {
        background: #ffffff;
        border-radius: 8px;
        padding: 16px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        border: 1px solid #eee;
    }

    .event-card h3 {
        margin-top: 0;
        margin-bottom: 8px;
        font-size: 1.2rem;
        color: #333;
    }

    .event-detail{
        font-size: 0.9rem;
        color: #555;
        margin-bottom: 6px;
    }
    .filters-bar {
        display: flex;
        flex-wrap: wrap;
        gap: 16px;
        align-items: flex-end;

        background: #f8f9fc;
        padding: 16px 20px;
        border-radius: 12px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.08);

        margin: 20px 0;
    }

    .filter-group {
        display: flex;
        flex-direction: column;
        min-width: 160px;
    }

    .filter-group label {
        font-size: 0.85rem;
        font-weight: 600;
        margin-bottom: 4px;
        color: #444;
    }

    .filter-group input,
    .filter-group select {
        padding: 6px 8px;
        border-radius: 6px;
        border: 1px solid #ccc;
        font-size: 0.9rem;
    }

    .checkbox-group {
        justify-content: center;
    }

    .checkbox-group label {
        display: flex;
        align-items: center;
        gap: 6px;
        font-weight: 500;
        margin-bottom: 0;
    }

    .filter-actions {
        display: flex;
        align-items: flex-end;
    }

  </style>
</head>


<!-- Search Bar / Sort -->

<%= form_with url: events_path, method: :get, local: true do %>
  <div class="filters-bar">

    <div class="filter-group">
      <label>Search Title</label>
      <%= text_field_tag :title, params[:title], placeholder: "Surprise Party..." %>
    </div>

    <div class="filter-group">
      <label>Created by</label>
      <%= select_tag :created_by,options_for_select([["Anyone", ""], ["Me", "me"], ["Not me", "not_me"]], params[:created_by]) %>
    </div>

    <div class="filter-group">
      <label>Min Budget</label>
      <%= number_field_tag :min_budget, params[:min_budget], placeholder: "20" %>
    </div>

    <div class="filter-group">
      <label>Max Budget</label>
      <%= number_field_tag :max_budget, params[:max_budget], placeholder: "100" %>
    </div>

    <div class="filter-group">
      <label>Sort By</label>
      <%= select_tag :sort_by,
                     options_for_select([["Alphabetical", "name"], ["Date", "date"]], params[:sort_by]),
                     include_blank: true %>
    </div>

    <div class="filter-group">
      <label>Order</label>
      <%= select_tag :direction,
                     options_for_select([["Ascending", "asc"], ["Descending", "desc"]], params[:direction]),
                     include_blank: true %>
    </div>

    <div class="filter-actions">
      <%= submit_tag "Apply Filters", class: "btn btn-default" %>
    </div>

  </div>
<% end %>
<!-- Search Bar / Sort -->

<div>
  <%= link_to 'Create New Event', new_event_path, class: "btn btn-default", id: "new_event_button" %>
</div>



<div class="login-container">
  <h1>All Events</h1>

  <% if flash[:alert] %>
    <p class="alert"><%= flash[:alert] %></p>
  <% elsif flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
  <% end %>

  <% if @events.present? %>
    <div class="events-grid">
      <% @events.each do |event| %>
        <div class="event-card">
          <h3><%= event.title %></h3>
          <div class="event-detail">
            <strong>Date:</strong> <%= event.event_date %>
          </div>
          <div class="event-detail">
            <strong>Location:</strong> <%= event.location %>
          </div>
          <div class="event-detail">
            <strong>Budget:</strong> $<%= event.budget %>
          </div>
          <div class="event-detail">
            <strong>Theme:</strong> <%= event.theme %>
          </div>

          <%= link_to "View Event", event_path(event), class: "btn btn-default" %>
        </div>
      <% end %>
    </div>

  <% else %>
    <p>You Currently Have No Events</p>
  <% end %>


</div>
</body>
</html>
