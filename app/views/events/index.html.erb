<!-- app/views/sessions/new.html.erb -->
<!-- This is the login page, creating a new session each time -->

<!DOCTYPE html>
<html>
<head>
  <title>Your Events | GiftWise</title>
  <%= stylesheet_link_tag "default", "data-turbo-track": "reload" %>
  <style>
    .events-grid{
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
        gap: 16px;
        margin-top: 20px;
    }

    .event-card {
        background: #ffffff;
        border-radius: 8px;
        padding: 16px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        border: 1px solid #eee;
    }

    .event-card h3 {
        margin-top: 0;
        margin-bottom: 8px;
        font-size: 1.2rem;
        color: #333;
    }

    .event-detail{
        font-size: 0.9rem;
        color: #555;
        margin-bottom: 6px;
    }
  </style>
</head>


<!-- Search Bar / Sort -->

<div>
  <label>Search Title</label><br>
  <%= text_field_tag :title, params[:title], placeholder: "Suprise Party...." %>
</div>

<%= form_with url: events_path, method: :get, local: true do %>
  <div style="display: flex; gap: 16px; flex-wrap: wrap; margin-bottom: 20px;">

    <div>
      <label>Min Budget</label><br>
      <%= number_field_tag :min_budget, params[:min_budget], placeholder: "20" %>
    </div>

    <div>
      <label>Max Budget</label><br>
      <%= number_field_tag :max_budget, params[:max_budget], placeholder: "100" %>
    </div>

    <div>
      <label>Sort By</label><br>
      <%= select_tag :sort_by,
                     options_for_select(
                       [["Alphabetical", "name"], ["Date", "date"]],
                       params[:sort_by]
                     ),
                     include_blank: true %>
    </div>

    <div>
      <label>Order</label><br>
      <%= select_tag :direction,
                     options_for_select(
                       [["Ascending", "asc"], ["Descending", "desc"]],
                       params[:direction]
                     ),
                     include_blank: true %>
    </div>

    <div style="align-self: flex-end;">
      <%= submit_tag "Apply Filters", class: "btn btn-default" %>
    </div>

  </div>
<% end %>
<!-- Search Bar / Sort -->

<div>
  <%= link_to 'Create New Event', new_event_path, class: "btn btn-default", id: "new_event_button" %>
</div>



<div class="login-container">
  <h1>All Events</h1>

  <% if flash[:alert] %>
    <p class="alert"><%= flash[:alert] %></p>
  <% elsif flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
  <% end %>

  <% if @events.present? %>
    <div class="events-grid">
      <% @events.each do |event| %>
        <div class="event-card">
          <h3><%= event.title %></h3>
          <div class="event-detail">
            <strong>Date:</strong> <%= event.event_date %>
          </div>
          <div class="event-detail">
            <strong>Location:</strong> <%= event.location %>
          </div>
          <div class="event-detail">
            <strong>Budget:</strong> $<%= event.budget %>
          </div>
          <div class="event-detail">
            <strong>Theme:</strong> <%= event.theme %>
          </div>

          <%= link_to "View Event", event_path(event), class: "btn btn-default" %>
        </div>
      <% end %>
    </div>

  <% else %>
    <p>You are not a gift-giver in any events yet.</p>
  <% end %>


</div>
</body>
</html>
