<style>
  * {
    box-sizing: border-box;
  }
  
  body {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    padding: 20px;
    font-family: system-ui, -apple-system, sans-serif;
  }
  
  .preferences-container {
    max-width: 900px;
    margin: 40px auto;
    animation: fadeIn 0.6s ease-in;
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .preferences-header {
    text-align: center;
    color: white;
    margin-bottom: 40px;
  }
  
  .preferences-header h1 {
    font-size: 42px;
    font-weight: 700;
    margin-bottom: 10px;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.2);
  }
  
  .preferences-header p {
    font-size: 18px;
    opacity: 0.9;
  }
  
  .preferences-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 30px;
    margin-bottom: 30px;
  }
  
  .preference-column {
    background: white;
    padding: 30px;
    border-radius: 16px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .preference-column:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0,0,0,0.3);
  }
  
  .preference-column h2 {
    font-size: 24px;
    margin-bottom: 20px;
    color: #333;
    border-bottom: 3px solid;
    padding-bottom: 10px;
  }
  
  .likes-column h2 {
    border-color: #00a86b;
    color: #00a86b;
  }
  
  .dislikes-column h2 {
    border-color: #e74c3c;
    color: #e74c3c;
  }
  
  .preferences-list {
    margin-bottom: 20px;
    max-height: 250px;
    overflow-y: auto;
    overflow-x: hidden;
    padding-right: 8px;
  }
  
  /* Custom scrollbar styling */
  .preferences-list::-webkit-scrollbar {
    width: 8px;
  }
  
  .preferences-list::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 10px;
  }
  
  .preferences-list::-webkit-scrollbar-thumb {
    background: #888;
    border-radius: 10px;
  }
  
  .preferences-list::-webkit-scrollbar-thumb:hover {
    background: #555;
  }
  
  .likes-column .preferences-list::-webkit-scrollbar-thumb {
    background: #00a86b;
  }
  
  .likes-column .preferences-list::-webkit-scrollbar-thumb:hover {
    background: #008a5a;
  }
  
  .dislikes-column .preferences-list::-webkit-scrollbar-thumb {
    background: #e74c3c;
  }
  
  .dislikes-column .preferences-list::-webkit-scrollbar-thumb:hover {
    background: #c0392b;
  }
  
  .preferences-list label {
    display: flex;
    align-items: center;
    padding: 8px 12px;
    margin-bottom: 6px;
    border-radius: 6px;
    cursor: pointer;
    transition: all 0.2s ease;
    background: #f8f9fa;
    font-size: 14px;
  }
  
  .preferences-list label:hover {
    background: #e9ecef;
    transform: translateX(5px);
  }
  
  .preferences-list input[type="checkbox"] {
    width: 18px;
    height: 18px;
    margin-right: 10px;
    cursor: pointer;
    accent-color: #00a86b;
    flex-shrink: 0;
  }
  
  .preferences-list input[type="checkbox"]:checked + span {
    font-weight: 600;
    color: #00a86b;
  }
  
  .preferences-list label span {
    flex: 1;
  }
  
  .divider {
    border: none;
    border-top: 2px solid #e9ecef;
    margin: 25px 0;
  }
  
  .add-custom-section {
    margin-top: 20px;
  }
  
  .add-custom-section label {
    display: block;
    margin-bottom: 8px;
    font-weight: 600;
    color: #555;
  }
  
  .add-custom-input {
    width: 100%;
    padding: 12px;
    border: 2px solid #e9ecef;
    border-radius: 8px;
    font-size: 14px;
    transition: border-color 0.3s ease;
    margin-bottom: 10px;
  }
  
  .add-custom-input:focus {
    outline: none;
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
  }
  
  .add-btn {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 8px;
    cursor: pointer;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3);
  }
  
  .add-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
  }
  
  .add-btn:active {
    transform: translateY(0);
  }
  
  .continue-btn-container {
    text-align: center;
    margin-top: 40px;
  }
  
  .continue-btn {
    background: linear-gradient(135deg, #00a86b 0%, #00d4aa 100%);
    color: white;
    padding: 16px 48px;
    border: none;
    border-radius: 12px;
    font-size: 18px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 6px 20px rgba(0, 168, 107, 0.3);
  }
  
  .continue-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(0, 168, 107, 0.4);
  }
  
  .continue-btn:active {
    transform: translateY(-1px);
  }
  
  .new-item {
    animation: slideIn 0.3s ease-out;
  }
  
  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  @media (max-width: 768px) {
    .preferences-grid {
      grid-template-columns: 1fr;
    }
    
    .preferences-header h1 {
      font-size: 32px;
    }
  }
</style>

<div class="preferences-container">
  <div class="preferences-header">
    <h1>Your Likes & Dislikes</h1>
    <p>Help us recommend the perfect gifts for you</p>
  </div>

  <%= form_with url: bulk_save_preferences_path, method: :post, local: true do %>
    <!-- Hidden fields for custom preferences -->
    <%= hidden_field_tag "new_like", "", id: "new_like_field" %>
    <%= hidden_field_tag "new_dislike", "", id: "new_dislike_field" %>
    
    <div class="preferences-grid">

      <!-- LIKES COLUMN -->
      <div class="preference-column likes-column">
        <h2>Likes</h2>

        <div id="likes-list" class="preferences-list">
          <% @preferences.each do |pref| %>
            <label>
              <%= check_box_tag "likes[]", pref.id, @likes.include?(pref.id), id: "likes_#{pref.id}" %>
              <span><%= pref.name %></span>
            </label>
          <% end %>
        </div>

        <hr class="divider">
        <div class="add-custom-section">
          <label>Add a custom like:</label>
          <input id="add-like-input"
                 class="add-custom-input"
                 placeholder="e.g., matcha" />

          <button type="button" id="add-like-btn" class="add-btn">Add Like</button>
        </div>
      </div>


      <!-- DISLIKES COLUMN -->
      <div class="preference-column dislikes-column">
        <h2>Dislikes</h2>

        <div id="dislikes-list" class="preferences-list">
          <% @preferences.each do |pref| %>
            <label>
              <%= check_box_tag "dislikes[]", pref.id, @dislikes.include?(pref.id), id: "dislikes_#{pref.id}" %>
              <span><%= pref.name %></span>
            </label>
          <% end %>
        </div>

        <hr class="divider">
        <div class="add-custom-section">
          <label>Add a custom dislike:</label>
          <input id="add-dislike-input"
                 class="add-custom-input"
                 placeholder="e.g., spicy food" />

          <button type="button" id="add-dislike-btn" class="add-btn">Add Dislike</button>
        </div>
      </div>

    </div>

    <div class="continue-btn-container">
      <button type="submit" class="continue-btn">Continue</button>
    </div>
  <% end %>
</div>


<script>
// Track custom preferences
let customLikes = {};
let customDislikes = {};

document.getElementById("add-like-btn").onclick = function() {
  const name = document.getElementById("add-like-input").value.trim();
  if (!name) return;

  const id = "new_like_" + name.replace(/\s+/g, "_").toLowerCase();
  
  // Don't add if it already exists
  if (document.getElementById(id)) return;

  // Create new checkbox for the LIKE box with data attribute
  const html = `
    <label class="new-item">
      <input type="checkbox" class="custom-like-checkbox" data-pref-name="${name}" id="${id}">
      <span>${name}</span>
    </label>
  `;

  document.getElementById("likes-list").insertAdjacentHTML("beforeend", html);
  document.getElementById("add-like-input").value = "";
  
  // Add event listener to the new checkbox
  const checkbox = document.getElementById(id);
  checkbox.addEventListener('change', function() {
    if (this.checked) {
      document.getElementById("new_like_field").value = name;
      // Uncheck other custom like checkboxes
      document.querySelectorAll('.custom-like-checkbox').forEach(function(cb) {
        if (cb.id !== id) cb.checked = false;
      });
    } else {
      // If this was the checked one, clear the hidden field
      if (document.getElementById("new_like_field").value === name) {
        document.getElementById("new_like_field").value = "";
      }
    }
  });
};

document.getElementById("add-dislike-btn").onclick = function() {
  const name = document.getElementById("add-dislike-input").value.trim();
  if (!name) return;

  const id = "new_dislike_" + name.replace(/\s+/g, "_").toLowerCase();
  
  // Don't add if it already exists
  if (document.getElementById(id)) return;

  // Create new checkbox for the DISLIKE box with data attribute
  const html = `
    <label class="new-item">
      <input type="checkbox" class="custom-dislike-checkbox" data-pref-name="${name}" id="${id}">
      <span>${name}</span>
    </label>
  `;

  document.getElementById("dislikes-list").insertAdjacentHTML("beforeend", html);
  document.getElementById("add-dislike-input").value = "";
  
  // Add event listener to the new checkbox
  const checkbox = document.getElementById(id);
  checkbox.addEventListener('change', function() {
    if (this.checked) {
      document.getElementById("new_dislike_field").value = name;
      // Uncheck other custom dislike checkboxes
      document.querySelectorAll('.custom-dislike-checkbox').forEach(function(cb) {
        if (cb.id !== id) cb.checked = false;
      });
    } else {
      // If this was the checked one, clear the hidden field
      if (document.getElementById("new_dislike_field").value === name) {
        document.getElementById("new_dislike_field").value = "";
      }
    }
  });
};
</script>