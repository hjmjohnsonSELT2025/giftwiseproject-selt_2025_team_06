<!-- app/views/users/new.html.erb -->
<!-- This will be the create account page => Creating a new user each time -->

<h1>Create Account</h1>

<%= form_with url: users_path, method: :post do %>

  <%= label_tag :username %>
  <%= text_field_tag :username %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= label_tag :hobbies %>
  <%= text_field_tag :hobbies %>

  <%= label_tag :occupation %>
  <%= text_field_tag :occupation %>

  <%= submit_tag "Submit" %>

<% end %>

<% if flash[:error] %>
  <p><%= flash[:error] %></p>
<% end %>
