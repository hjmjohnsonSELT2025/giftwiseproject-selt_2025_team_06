<!-- Welcome Page -->

<div style="
display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 80vh;
  text-align: center;
  font-family: Arial, sans-serif;
">

  <h1 style="font-size: 3rem; margin-bottom: 10px; color: #333;">
    ğŸ Welcome to GiftWise
  </h1>

  <p style="font-size: 1.3rem; max-width: 600px; color: #555;">
    A simple way to organize your likes, dislikes, and gift preferences,
    so your friends and family always know what to get you.
  </p>

  <div style="margin-top: 40px; display: flex; gap: 20px;">

    <div style="margin-top: 40px; display: flex; gap: 20px;">

      <% if current_user %>

        <%= link_to "Go to Home", events_path,
                    style: "
            padding: 12px 28px;
            background-color: #17a2b8;
            color: white;
            border-radius: 8px;
            text-decoration: none;
            font-size: 1.1rem;
          " %>

      <% else %>

        <%= link_to "Login", login_path,
                    style: "
            padding: 12px 28px;
            background-color: #007bff;
            color: white;
            border-radius: 8px;
            text-decoration: none;
            font-size: 1.1rem;
          " %>

        <%= link_to "Sign Up", new_user_path,
                    style: "
            padding: 12px 28px;
            background-color: #28a745;
            color: white;
            border-radius: 8px;
            text-decoration: none;
            font-size: 1.1rem;
          " %>

      <% end %>

    </div>


  </div>
</div>