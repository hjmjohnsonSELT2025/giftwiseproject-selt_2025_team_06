<!--  This is the ACCOUNT RECOVERY Forgot Password / Email / User Page-->

<div class="login-page",>
  <div class="login-container">

    <h1 class="login-title">ğŸ GiftWise ğŸ</h1>
    <h2 class="login-subtitle">Recover Account</h2>

    <% if flash[:alert] %>
      <p class="alert"><%= flash[:alert] %></p>
    <% elsif flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>

    <%= form_with url: forgot_path, method: :post, local: true, html: { class: "login-form" } do |f| %>

      <div class="field">
        <%= f.label :identifier, "Email or Username", class: "form-label" %>
        <%= f.text_field :identifier,
                         class: "form-input",
                         placeholder: "Enter your email or username" %>
      </div>

      <div class="login-button-container">
        <%= f.submit "Send Recovery Instructions", class: "login-button" %>
      </div>

    <% end %>

    <div class="footer-container">
      <%= link_to "Back to Log In", login_path, class: "back-link" %>
    </div>

  </div>
</div>
