<div class="login-container">
  <h2 class="login-title">Edit Gift Idea</h2>

  <%= form_with model: @gift, url: gift_path(@gift), method: :patch do |f| %>

    <div>
      <%= f.label :name, "Name", class: "form-label" %>
      <%= f.text_field :name, class: "form-input" %>
    </div>

    <div>
      <%= f.label :description, "Description", class: "form-label" %>
      <%= f.text_area :description, rows: 3, class: "form-input" %>
    </div>

    <div>
      <%= f.label :price, "Price", class: "form-label" %>
      <%= f.number_field :price, step: 0.01, class: "form-input" %>
    </div>

    <div>
      <%= f.label :purchase_url, "URL", class: "form-label" %>
      <%= f.text_field :purchase_url, class: "form-input" %>
    </div>

    <div style="margin-top: 15px;">
      <%= f.submit "Update Gift", class: "add-btn" %>
    </div>

  <% end %>
</div>
